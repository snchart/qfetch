        ascic="    \\\\\\\ ${red}      \`.____    "
        ascid="     \\\\\\\\${red}-______,----\`-  "
        ascie="      \\\\\\\               "
        ascif="       \\\\\\\              "
        ascig="        \\\\\\\             "
        ascih="         \\\\\\\            "
        ascij="                     "
        color="$red"
        ;;
    haiku|haikuos)
        ascia="${green}         ,^,         "
        ascib="${green}        /   \\\        "
        ascic="${green}  *--_ ;     ; _--*  "

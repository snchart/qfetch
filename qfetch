        ascic="${red}  \\\_)       (_/  "
        ascid="${red}  |           |  "
        ascie="${red}  |           |  "
        ascif="${red}   ;         ;   "
        ascig="${red}    '-_____-'    "
        ascih="                 "
        ascij="                 "
        color="$red"

        ascib="          *       "
        ascic="${blue}    .-\`-.${reset} |       "
        ascid="${blue}    |   | ${reset}|-'-.   "
        ascie="${blue}    \\\   / ${reset}|  .'   "
        ascif="  .' ${blue}\`\"\` ${reset}_.-\`     "
        ascig="  '-..-'\`         "
        ascih="                  "
        ascij="                  "
        ;;
    exherbo*)
        ascia=" .'.  ,_....,__.._  "
        ascib="  \\\ |'        \`'. | "
        ascic="  /'   _   /${blue}w${reset}\\\   \\\. "
        ascid=" :    |${blue}#${reset}|  \\\\${blue}#${reset}/    : "
        ascie=" :   ${red}.-*\"\"\"=-_    ${reset}| "
        ascif="  \\\ ${red}|${reset}  +    B ${red}':${reset} /  "
        ascig="   '.${red}'._____.-'${reset} /   "
        ascih="     ${reset}'=.,,,,,.='    "
        ascij="                    "
        color="$blue"
        ;;
    obarun)
        ascia="${blue}       __.     "
        ascib="${blue}    .W'        "
        ascic="${blue}   //    .ww.  "
        ascid="${blue}  ||    WWWW*  "
        ascie="${blue}  ||    www/   "
        ascif="${blue}  \\\|._  ,//    "
        ascig="${blue}   '^4WP^'     "
        ascih="               "
        ascih="               "
        color="$blue"
        ;;
    bedrock*)
        ascia="               "
        ascib="${gray}   _________   "
        ascic="${gray}  | ${reset}__      ${gray}|  "
        ascid="${gray}  | ${reset}\\\ \\\___  ${gray}|  "
        ascie="${gray}  |  ${reset}\\\  _ \\\ ${gray}|  "
        ascif="${gray}  |   ${reset}\\\___/${gray} |  "
        ascig="${gray}  |_________|  "
        ascih="               "
        ascij="               "
        color="$gray"
        ;;
    *)
        ascia="     ___     "
        ascib="    (.. |    "
        ascic="    (<> |    "
        ascid="   / __  \\\   "
        ascie="  ( /  \\\ /|  "
        ascif=" _/\\\ __)/_)  "
        ascig=" \\\/-____\\\/   "
        ascih="             "
        ascij="             "
        ;;
esac

printf "\n"
printf "%s$ascia $reset ${color}$(userg)${reset}@${color}$host${reset} \n"
printf "%s$ascib $reset ${color}os:${reset}     $(distrog)\n"
printf "%s$ascic $reset ${color}pkg:${reset}    $(pkgm)\n"
printf "%s$ascid $reset ${color}ram:${reset}    $(ramd)\n"
printf "%s$ascie $reset ${color}cpu:${reset}    $(cpug)\n"
printf "%s$ascif $reset ${color}sh:${reset}     $shell\n"
printf "%s$ascig $reset ${color}env:${reset}    $(env)\n"
printf "%s$ascih $reset ${color}disk:${reset}   $(disk)\n"
printf "%s$ascij$reset\n"

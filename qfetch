        ascib="${green}   ;,           ,;   "
        ascic="${green}    ';,.-----.,;'    "
        ascid="${green}   ,'           ',   "
        ascie="${green}  /    O     O    \\\  "
        ascif="${green} |                 | "
        ascig="${green} '-----------------' "
        ascih="                     "
        ascij="                     "
        color="$green"
        ;;
    cachy|cachyos)
        ascia="${aqua}    /''''''''''''/    "
        ascib="${aqua}   /      ______/     "
        ascic="${aqua}  /      /            "
        ascid="${aqua} /      /             "
        ascie="${aqua} \      \             "
        ascif="${aqua}  \      \___________ "
        ascig="${aqua}   \                / "
        ascih="${aqua}    '..............'  "
        ascij="                     "
        color="$aqua"
        ;;
    pop|popos)
        ascia="${aqua}  ______             "
        ascib="${aqua}  \\\   _ \\\        __  "
        ascic="${aqua}   \\\ \ \\\ \\\      / /  "
        ascid="${aqua}    \\\ \\\_\\\ \\\    / /   "
        ascie="${aqua}     \\\  ___\\\  /_/    "
        ascif="${aqua}      \\\ \\\    _       " 
        ascig="${aqua}     __\\\ \\\__(_)_     "
        ascih="${aqua}    (___________)    "
        ascij="                   "

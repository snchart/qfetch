        ascie="${green}   '.           .'   "
        ascif="${green}  .-'\"         \"'-.  "
        ascig="${green}   '-.__.   .__.-'   "
        ascih="${green}         |_|         "
        ascij="                     "
        color="$green"
        ;;
    venom|venomlinux)
        ascia="${gray}  ,__   _,.,_       "
        ascib="${gray}  ':###:\"'\`'\"#:.    "
        ascic="${gray}    :####.    '#:   "
        ascid="${gray}   :#: '####.  :#:  "
        ascie="${gray}    :#.   '###.#:   "
        ascif="${gray}     '#:,,_,,:###:  "
        ascig="${gray}       \`''=''\` '^:  "
        ascih="                    "
